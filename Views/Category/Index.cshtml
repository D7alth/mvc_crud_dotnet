@model IEnumerable<Category>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create a new category</a>
        </div>
    </div>
    <br> <br>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplaOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group text-end" role="group">
                            <a class="btn" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group text-end" role="group">
                            <a class="btn" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"> <i class="bi bi-trash"></i>Delete</a>
                        </div>     
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>